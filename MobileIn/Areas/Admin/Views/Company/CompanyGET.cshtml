@model Company
@{
    Layout = "DashbourdLayout";
}

<div class="container mt-5">

    <h3 style="color:#3f51b5"> @(Model.id == 0 ? "Add New Company" : "Update Current Company") </h3>
    <hr />

    <form class="w-50" method="post" asp-action="Upsert" asp-controller="Company" >
        <div asp-validation-summary="All" class="text-danger"></div>
        <input hidden asp-for="id" />
        <div class="form-group">
            <label asp-for="name"></label>
            <input asp-for="name" class="form-control" maxlength="20" minlength="2"/>
        </div>
        <div class="form-group mt-3">
            <label asp-for="address"></label>
            <input asp-for="address" class="form-control" maxlength="20" minlength="2" />
        </div>
      <div class=" d-flex align-items-center flex-wrap" >
            @if (Model.id == 0)
            {
                <button type="submit" class="btn btn-success px-5 me-2 mt-3" >Add</button>
            }
            else
            {
                <button type="submit" class="btn btn-warning px-5 me-2 mt-3">Update</button>
            }
            <a class="btn btn-outline-secondary px-5 mt-3" asp-controller="Dashbourd" asp-action="Index">Back To Dashbourd</a>
        </div>
    </form>
</div>

@section Scripts{
       <partial name="_ValidationScriptsPartial" />
  
}

