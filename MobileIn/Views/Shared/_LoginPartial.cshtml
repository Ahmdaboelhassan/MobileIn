@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-light btn btn-secondary " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user"></i> Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link text-light btn btn-secondary mx-1">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link btn btn-secondary" style="color:#fff;" asp-area="Identity" asp-page="/Account/Login"><i class="fa-solid fa-user" style="color: #ffffff;"></i> Login</a>
    </li>
}
</ul>
