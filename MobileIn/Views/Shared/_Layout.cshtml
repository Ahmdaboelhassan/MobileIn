@using Business.SD;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MobileIn</title>
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MobileIn.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid ">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index"> <img src="~/Images/logo Rounded.png" style="max-width:40px;height:40px" alt="Logo" /> MobileIn</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                     
                        @if (User.IsInRole(SD.SuperAdmin) || User.IsInRole(SD.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-danger text-light" asp-area="Admin" asp-controller="Dashbourd" asp-action="Index"><i class="fa-solid fa-gear fa-spin-pulse"></i> Dashbourd</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link btn btn-success text-light mx-1" asp-area="Customer" asp-controller="ShoppingList" asp-action="Index"><i class="fa-solid fa-cart-shopping fa-bounce"></i> ShoppingList</a>
                        </li>
                        @if (User.IsInRole(SD.User))
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-dark text-light mx-1" asp-area="Customer" asp-controller="Order" asp-action="Index"><i class="fa-solid fa-location-dot"></i> My Order</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            <partial name="_NotificationPartial"/>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
